/* pages/play/play.wxss */
page{
  background-color: #000;
}
.img{
  width: 700rpx;
  height: 700rpx;
  border: 20rpx solid rgba(255,255,255,.3);
  margin: 25rpx;
  box-sizing: border-box;
}
.now,
.duration{
  font-size: 14px;
  color: #ccc;
}
.wrap{
  overflow: hidden;
}
.now{
  float: left;
}
.duration{
  float: right;
}
.scroll{
  height: 100rpx;
  background-color: rgba(255,255,255,0.1);
  text-align: center;
  position: absolute;
  left: 0;
  bottom: 100rpx;  
}
.white{
  color: #fff;
}
.btnList{
  padding:0 100rpx;
}
.btnList button{
  display:inline-block;
  margin-right:20rpx;
}